@model RegisterAdminInputModel

<div class="container">
    <div class="row d-flex justify-content-center align-items-center">
        <div class="col-12 col-md-8 col-lg-6 col-xl-5">
            <div class="container-fluid card mb-4">
                <div class="card-body p-4 text-center">
                    <div class="mb-md-2 mt-md-4 pb-2">
                        <form method="post" asp-page-handler="RegisterAdmin" asp-route-returnUrl="@TempData[Globals.ReturnUrl]">
                            <div asp-validation-summary="ModelOnly" class="alert alert-danger fade show"></div>

                            <label><h2 class="fw-bold mb-2 text-uppercase">Register a new administrator</h2></label>

                            <hr />

                            <div class="form-outline form-white mb-4">
                                <label class="form-label required" asp-for="Email"></label>
                                <input type="email" asp-for="Email" class="form-control form-control-lg" />
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>

                            <div class="form-outline form-white mb-4">
                                <label class="form-label required" asp-for="FirstName"></label>
                                <input type="text" asp-for="FirstName" class="form-control form-control-lg" />
                                <span asp-validation-for="FirstName" class="text-danger"></span>
                            </div>

                            <div class="form-outline form-white mb-4">
                                <label class="form-label required" asp-for="LastName"></label>
                                <input type="text" asp-for="LastName" class="form-control form-control-lg" />
                                <span asp-validation-for="LastName" class="text-danger"></span>
                            </div>

                            <div class="form-outline form-white mb-4">
                                <label class="form-label" asp-for="PhoneNumber"></label>
                                <input type="text" asp-for="PhoneNumber" class="form-control form-control-lg" />
                                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                            </div>

                            <div class="form-outline form-white mb-4">
                                <label class="form-label required" asp-for="Password"></label>
                                <input type="password" asp-for="Password" class="form-control form-control-lg" />
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>

                            <div class="form-outline form-white mb-4">
                                <label class="form-label required" asp-for="ConfirmPassword"></label>
                                <input type="password" asp-for="ConfirmPassword" class="form-control form-control-lg" />
                                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                            </div>

                            <div class="form-outline form-white mb-4">
                                <input type="checkbox" asp-for="IsTermsAccepted" class="form-check-input" id="isTermsAccepted" />
                                <label class="form-check-label required" asp-for="IsTermsAccepted" for="isTermsAccepted"></label>
                                <span asp-validation-for="IsTermsAccepted" class="text-danger form-check-inline"></span>
                            </div>

                            <button id="submitId" class="btn btn-company btn-lg w-100" style="margin-bottom: 2em;" type="submit" onclick="submitClick()">
                                <span id="spanId" class="spinner-border spinner-border-sm mr-2 d-none"></span> Create administrator
                            </button>

                            <a class="fw-bold" href="/@Globals.PageAllRegistered">Back</a>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>