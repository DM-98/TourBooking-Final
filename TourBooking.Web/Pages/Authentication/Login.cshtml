@page "/{handle}/login"

@model LoginModel

@{
    ViewData[Globals.Title] = Globals.TitleLogin;
    ViewData[Globals.CurrentPage] = Globals.PageLogin;
}

<div class="container">
    <div class="row d-flex justify-content-center align-items-center">
        <div class="col-12 col-md-8 col-lg-6 col-xl-5">
            <div class="container-fluid card mb-4">
                <div class="card-body p-4 text-center">
                    <div class="mb-md-2 mt-md-4 pb-2">
                        <form method="post" asp-page-handler="Login" asp-route-returnUrl="@(TempData[Globals.ReturnUrl])">
                            <div asp-validation-summary="ModelOnly" class="alert alert-danger fade show"></div>

                            <label><h2 class="fw-bold mb-2 text-uppercase">Login</h2></label>

                            <hr />

                            <div class="form-outline form-white mb-4">
                                <label class="form-label" asp-for="LoginInputModel.Email"></label>
                                <input type="email" asp-for="LoginInputModel.Email" class="form-control form-control-lg" />
                                <span asp-validation-for="LoginInputModel.Email" class="text-danger"></span>
                            </div>

                            <div class="form-outline form-white mb-4">
                                <label class="form-label" asp-for="LoginInputModel.Password"></label>
                                <input type="password" asp-for="LoginInputModel.Password" class="form-control form-control-lg" />
                                <span asp-validation-for="LoginInputModel.Password" class="text-danger"></span>
                            </div>

                            <div class="form-outline form-white mb-4">
                                <input type="checkbox" class="form-check-input" id="rememberme" asp-for="LoginInputModel.RememberMe" />
                                <label class="form-check-label" for="rememberme">Stay logged in</label>
                            </div>

                            <button id="submitId" class="btn btn-company btn-lg w-100" style="margin-bottom: 2em;" type="submit" onclick="submitClick()">
                                <span id="spanId" class="spinner-border spinner-border-sm mr-2 d-none"></span> Login
                            </button>

                            <a class="fw-bold" href="/@Model.Company!.Handle/register?returnUrl=@TempData[Globals.ReturnUrl]">Register here</a>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}